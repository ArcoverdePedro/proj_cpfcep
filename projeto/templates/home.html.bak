<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Validar CPF e CEP</title>
<!--Bootstrap-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<!--Font Awesome-->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
<!--CSS-->
<style>
    /* Estilos personalizados */
    h1 {
        margin-top: 20px;
        text-align: center;
        font-size: 2.5rem;
        color: #007bff;
    }

    .container {
        margin-top: 30px;
    }

    .table th, .table td {
        text-align: center;
    }

    .table {
        margin-top: 20px;
    }

    .actions a {
        margin-right: 10px;
    }

    .ordenar {
        margin: 10px 0;
        text-align: center;
    }

    .ordenar a {
        text-decoration: none;
        color: #00e5ffd5;
    }

    .ordenar a:hover {
        text-decoration: underline;
    }

    .btn-cpf {
        margin: 20px;
        display: block;
        width: 200px;
        margin-left: auto;
        margin-right: auto;
    }
    .btn-cep {
        margin: 20px;
        display: block;
        width: 200px;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<!--AJAX-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Validar CPF e CEP</h1>
    <div class="container">
    <h1>Validar CPF</h1>
    <div class="form-container">
        <form method="POST" id="form-cpf">
            {% csrf_token %}
            <input type="text" id="cpf" class="form-control" placeholder="Digite o CPF">
            <button class="btn-cpf btn btn-primary" onclick="Validar()">Validar CPF</button>
        </form>
        
    </div>
    </div>
    <!--tentativa JS-->
    <script>
        $.ajax({
            url: '/validar_cpf/' + document.getElementById('cpf').value + '/',
            data: { cpf: document.getElementById('cpf').value },
            success: function (response) {
                console.log(response);
            }
        });
    </script>

    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!--Font Awesome JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js"></script>
    
</body>
</html>